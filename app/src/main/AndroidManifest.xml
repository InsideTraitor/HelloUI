<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hollisinman.helloui">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_ANIMATION_SCALE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.droidrocks.demos.helloui.authentication.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.droidrocks.demos.helloui.general.Calculator" />
        <activity android:name="com.droidrocks.demos.helloui.authentication.Registration" />
        <activity android:name="com.droidrocks.demos.helloui.authentication.ForgotPassword" />
        <activity android:name="com.droidrocks.demos.helloui.general.HomePage" />
        <activity
            android:name="com.droidrocks.demos.helloui.general.NavDrawer"
            android:label="@string/title_activity_nav_drawer"
            android:parentActivityName="com.droidrocks.demos.helloui.general.HomePage"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.droidrocks.demos.helloui.general.NavDrawer" />
        </activity>
        <activity android:name="com.droidrocks.demos.helloui.general.RxJava" />
        <activity android:name="com.droidrocks.demos.helloui.general.PlaySound" />
        <activity android:name="com.droidrocks.demos.helloui.general.RxJava2"></activity>
    </application>

</manifest>